<%= form_with(model: profile, url: update_profile_path, local: true)  do |f| %>

  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
      <%= f.label :street, "Address 2" %>
      <%= f.text_field :street, :class =>"form-control", :placeholder=>"1234 Main Street"%>
  </div>
  <div class="form-group">
      <%= f.label :street_2, "Address 2" %>
      <%= f.text_field :street_2, :class =>"form-control", :placeholder=>"Apartment, studio, or floor"%>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
        <%= f.label :city %>
        <%= f.text_field :city, :class=> "form-control"%>
    </div>
    <div class="form-group col-md-4">
        <%= f.label :state %>
        <%= f.select :state, options_for_select(["NC", "DC"], 
          current_user.profile.state ? current_user.profile.state : "NC"),
          {}, {required: 'true', autofocus: 'true', class: 'form-control'}
        %>

    </div>
    <div class="form-group col-md-2">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, :class=>"form-control" %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :tel_number %>
      <%= f.telephone_field :tel_number, :class=> "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :mobile_number %>
      <%= f.telephone_field :mobile_number, :class=> "form-control" %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Save", :class=>"btn btn-success" %>
  </div>

<% end %>