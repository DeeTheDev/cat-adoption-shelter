<%= render 'dashboard' %>

<% if user_signed_in? %>
    <div class="card mb-4 bg-light">
        <div class="card-body">
        <h5>Your history with <%= @cat.name %></h5>
        </div>      
    </div>
    <div class="row">
        <div class="col">
            <p>
                <img src=<%= @cat.image_url %> class="img-thumbnail"
                    style="width: 100%; height: 30vw; object-fit: cover;" alt="cat_for_adoption">
            </p>
            <h4>Cat Statistics</h4>
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td>
                            <strong>Gender</strong>
                        </td>
                        <td>
                            <%= @cat.gender %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Age</strong>
                        </td>
                        <td>
                            <%= @cat.age %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Breed</strong>
                        </td>
                        <td>
                            <%= @cat.breed %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Color</strong>
                        </td>
                        <td>
                            <%= @cat.color %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Good with Cats?</strong>
                        </td>
                        <td>
                            <%= @cat.good_with_cats %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Good with Dogs?</strong>
                        </td>
                        <td>
                            <%= @cat.good_with_dogs %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Declawed</strong>
                        </td>
                        <td>
                            <%= @cat.declawed %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Special Needs</strong>
                        </td>
                        <td>
                            <%= @cat.special_needs %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col">
            <% if @cat.appointment %>
            <div class="card mb-4 bg-warning">
                <div class="card-body">
                <h5>This cat was scheduled for pickup.</h5>      
            </div>
            </div>
                <h5>Pickup Location (Cat Adoption Shelter):</h5>
                90002 Fake Street<br>
                Durham, North Carolina 27709
                <hr>
            <table class="table table-striped table-bordered">
                    <tbody>
                    <tr>
                        <td>
                            <strong>Appointment Date</strong>
                        </td>
                        <td>
                            <%= @cat.appointment.pickup_date%>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Scheduled On</strong>
                        </td>
                        <td>
                            <%= @cat.appointment.created_at.to_date%>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
            <% end%>
            <% if @cat.delivery %>
            <div class="card mb-4 bg-warning">
                <div class="card-body">
                <h5>This cat was scheduled for delivery.</h5>      
            </div>
            </div>
                <h5>Delivery Location</h5>
                <%= @cat.delivery.street%><br>
                <%= @cat.delivery.city%>, <%= @cat.delivery.state%> <%= @cat.delivery.zip_code%>
                <hr>
            <table class="table table-striped table-bordered">
                    <tbody>
                    <tr>
                        <td>
                            <strong>Appointment Date</strong>
                        </td>
                        <td>
                            <%= @cat.delivery.delivery_date%>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Scheduled On</strong>
                        </td>
                        <td>
                            <%= @cat.delivery.created_at.to_date%>
                        </td>
                    </tr>
                    
                </tbody>
            </table>
            <% end%>
        </div>
    </div>


<% else %>
    <p>Please sign in</p>
    <%= link_to 'Register', new_user_registration_path %>
    <%= link_to 'Sign In', new_user_session_path %>
<% end %>