<% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>

<div class="card bg-dark text-white mb-4">
  <img src="https://images.theconversation.com/files/350865/original/file-20200803-24-50u91u.jpg?ixlib=rb-1.1.0&q=45&auto=format&w=1200&h=675.0&fit=crop" 
        class="card-img" style="width: 100%; height: 25vw; object-fit: cover;" alt="Welcome">
  <div class="card-img-overlay">
    <h1 class="card-title">Welcome to our Cat Adoption Shelter!</h1>
  </div>
</div>

<div class="row">
    <div class="col">

        <%= link_to 'Checkout the Paws', cats_path, :class=>"btn btn-success w-100", :style=> "font-size: 20px"%>  
          
    </div>
</div>
