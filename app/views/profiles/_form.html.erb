<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :street %>
    <%= f.text_field :street, :value => current_user.profile.street%>
  </div>

  <div class="field">
    <%= f.label :street_2 %>
    <%= f.text_field :street_2, :value => current_user.profile.street_2 %>
  </div>

  <div class="field">
    <%= f.label :city %>
    <%= f.text_field :city, :value => current_user.profile.city %>
  </div>

  <div class="field">
    <%= f.label :state %>
    <%= select_tag(:state, options_for_select([ 
          ['NC'], ['DC']
        ], current_user.profile.state))
        %>
  </div>

  <div class="field">
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code, :value => current_user.profile.zip_code %>
  </div>

  <div class="field">
    <%= f.label :tel_number %>
    <%= f.telephone_field :tel_number, :value => current_user.profile.tel_number %>
  </div>

  <div class="field">
    <%= f.label :mobile_number %>
    <%= f.telephone_field :mobile_number, :value => current_user.profile.mobile_number %>
  </div>

  <div class="field">
    <%= f.label :of_age %>
    <%= f.text_field :of_age, :value => current_user.profile.of_age %>
  </div>


  <div class="actions">
    <%= f.submit "Update profile and continue" %>
  </div>

<% end %>