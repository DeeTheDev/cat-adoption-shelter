<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
    <%= f.hidden_field :cat_id, :value => @cat.id %>
  <div class="form-group">
    <%= f.label :street, "Address" %>
    <%= f.text_field :street, :value => current_user.profile.street, :class => "form-control", :placeholder => "1234 Main St",:required => true%>
  </div>
  <div class="form-group">
      <%= f.label :street_2, "Address 2" %>
      <%= f.text_field :street_2, :value => current_user.profile.street_2, :class =>"form-control", :placeholder=>"Apartment, studio, or floor"%>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
        <%= f.label :city %>
        <%= f.text_field :city, :value => current_user.profile.city, :class=> "form-control",:required => true%>
    </div>
    <div class="form-group col-md-3">
        <%= f.label :state %>
        <%= f.select :state, options_for_select(["NC", "DC"], 
          current_user.profile.state ? current_user.profile.state : "NC"),
          {}, {required: 'true', autofocus: 'true', class: 'form-control'}
        %>

    </div>
    <div class="form-group col-md-3">
        <%= f.label :zip_code %>
        <%= f.text_field :zip_code, :value => current_user.profile.zip_code, :class=>"form-control",:required => true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :tel_number %>
      <%= f.telephone_field :tel_number, :value => current_user.profile.tel_number, :class=> "form-control",:required => true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :mobile_number %>
      <%= f.telephone_field :mobile_number, :value => current_user.profile.mobile_number, :class=> "form-control",:required => true %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update profile and continue", :class=>"btn btn-primary" %>
  </div>

<% end %>