
<%= render 'cats/header' %>

<h1>Delivery Service</h1>
<% if user_signed_in? %>
    <div class="row">
        <div class="col">
            <h4><%= @cat.name %>'s Information</h4>
            <p>
                <img src=<%= @cat.image_url %> class="img-thumbnail"
                    style="width: 100%; height: 30vw; object-fit: cover;" alt="cat_for_adoption">
            </p>
            <h4>Cat Statistics</h4>

            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td>
                            <strong>Gender</strong>
                        </td>
                        <td>
                            <%= @cat.gender %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Age</strong>
                        </td>
                        <td>
                            <%= @cat.age %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Breed</strong>
                        </td>
                        <td>
                            <%= @cat.breed %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Color</strong>
                        </td>
                        <td>
                            <%= @cat.color %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Good with Cats?</strong>
                        </td>
                        <td>
                            <%= @cat.good_with_cats %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Good with Dogs?</strong>
                        </td>
                        <td>
                            <%= @cat.good_with_dogs %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Declawed</strong>
                        </td>
                        <td>
                            <%= @cat.declawed %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Special Needs</strong>
                        </td>
                        <td>
                            <%= @cat.special_needs %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="col">
            <h4>Your Contact Information</h4>
            <table class="table table-striped table-bordered">
                <tbody>
                    <tr>
                        <td>
                            <strong>Full Name</strong>
                        </td>
                        <td>
                            <%= current_user.first_name %> <%= current_user.last_name %>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Email</strong>
                        </td>
                        <td>
                            <%= current_user.email %>
                        </td>
                    </tr>
                </tbody>
            </table>
            <h4>Verify Delivery Information</h4>
            <p>Before your delivery, your profile needs to be up-to-date.</p>
            
            <%= render 'form', profile: @profile %>
        </div>
    </div>


<% else %>
    <p>Please sign in before adopting <%= @cat.name %></p>
    <%= link_to 'Register', new_user_registration_path %>
    <%= link_to 'Sign In', new_user_session_path %>
<% end %>