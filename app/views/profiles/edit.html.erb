
<h1>Delivery Service</h1>
<% if user_signed_in? %>
    <p>You are adopting Cat: <%= @cat.name %>
    <p>
        <img src=<%= @cat.image_url %> class="img-thumbnail" alt="cat_for_adoption">
    </p>
    <h4>Your information</h4>

    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
                <td>
                    <strong>Full Name</strong>
                </td>
                <td>
                    <%= current_user.first_name %> <%= current_user.last_name %>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Email</strong>
                </td>
                <td>
                    <%= current_user.email %>
                </td>
            </tr>
        </tbody>
    </table>
    <h4>Verify Delivery Information</h4>
    <p>Before your delivery, your profile needs to be up-to-date.</p>
    
    <%= render 'form', profile: @profile %>


<% else %>
    <p>Please sign in before adopting <%= @cat.name %></p>
    <%= link_to 'Register', new_user_registration_path %>
    <%= link_to 'Sign In', new_user_session_path %>
<% end %>