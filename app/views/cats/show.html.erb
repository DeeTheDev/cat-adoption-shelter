<% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>

<%= render 'header' %>

<div class="card mb-4 bg-light">
    <div class="card-body">
                <h3>Purrr! My name is <%= @cat.name %>
                    <span class="badge <%= @cat.available === "Available" ? "badge-success" : "badge-danger" %>"><%= @cat.available %> To Adopt </span>
                </h3>
    </div>
</div>
<div class="row">
    <div class="col">
        <h4>My Pic</h4>
        <p>
            <img src=<%= @cat.image_url %> class="img-thumbnail"
                style="width: 100%; height: 30vw; object-fit: cover;" alt="cat_for_adoption">
        </p>
        <% if user_signed_in?%>
            <% if @cat.available === "Available" %>
                <p>
                    <a class="btn btn-success w-100" href="/cats/adopt/<%= @cat.id  %>" role="button">Adopt me</a>
                </p>
            <% else %>
                <p>
                    <button type="button" class="btn btn-secondary w-100">Unavailable to Adopt</button>
                </p>
            <% end %>
        <% else %>
            <div class="alert alert-warning" role="alert">
                <p>Please Login Or Sign Up To Adopt -
                    <%= link_to 'Login', new_user_session_path %> |
                    <%= link_to 'Sign Up', new_user_registration_path %>
                </p>
            </div>
        <% end %>
    </div>
    <div class="col">
        <h4>My Statistics</h4>

        <table class="table table-striped table-bordered">
            <tbody>
                <tr>
                    <td>
                        <strong>Gender</strong>
                    </td>
                    <td>
                        <%= @cat.gender %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Age</strong>
                    </td>
                    <td>
                        <%= @cat.age %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Breed</strong>
                    </td>
                    <td>
                        <%= @cat.breed %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Color</strong>
                    </td>
                    <td>
                        <%= @cat.color %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Good with Cats?</strong>
                    </td>
                    <td>
                        <%= @cat.good_with_cats %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Good with Dogs?</strong>
                    </td>
                    <td>
                        <%= @cat.good_with_dogs %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Declawed</strong>
                    </td>
                    <td>
                        <%= @cat.declawed %>
                    </td>
                </tr>
                <tr>
                    <td>
                        <strong>Special Needs</strong>
                    </td>
                    <td>
                        <%= @cat.special_needs %>
                    </td>
                </tr>
            </tbody>
        </table>
        <h4>Description</h4>
        <p><%= @cat.description %></p>
    </div>
</div>


