<p id="notice"><%= notice %></p>

<h1>#Show Cat</h1>


<p>
<img src=<%= @cat.image_url %> class="img-thumbnail" alt="cat_for_adoption">
</p>


<% if user_signed_in? %>
    <p>
        <a href="/cats/adopt/<%= @cat.id  %>">Adopt Me</a>
    </p>
<% else %>
    <p>Please Sign In Or Register To Adopt</p>
    <%= link_to 'Register', new_user_registration_path %>
    <%= link_to 'Sign In', new_user_session_path %>
<% end %>

<h3>Hello! My name is <%= @cat.name %></h3>

<h4>My Statistics</h4>

<table class="table table-striped table-bordered">
    <tbody>
        <tr>
            <td>
                <strong>Gender</strong>
            </td>
            <td>
                <%= @cat.gender %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Age</strong>
            </td>
            <td>
                <%= @cat.age %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Breed</strong>
            </td>
            <td>
                <%= @cat.breed %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Color</strong>
            </td>
            <td>
                <%= @cat.color %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Good with Cats?</strong>
            </td>
            <td>
                <%= @cat.good_with_cats %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Good with Dogs?</strong>
            </td>
            <td>
                <%= @cat.good_with_dogs %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Declawed</strong>
            </td>
            <td>
                <%= @cat.declawed %>
            </td>
        </tr>
        <tr>
            <td>
                <strong>Special Needs</strong>
            </td>
            <td>
                <%= @cat.special_needs %>
            </td>
        </tr>
    </tbody>
</table>
<h4>Description</h4>
<p><%= @cat.description %></p>