<% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
<% end %>

<%= render 'header' %>

<div class="card mb-4 bg-light">
    <div class="card-body">
        <h5>This is a list of all available and unavailable cats at our Cat Adoption Shelter</h5>
    </div>
</div>

    <h3 >
        <span class="badge badge-success" %>Available Cats</span>
    </h3>
<div class="row">
    <% @cats.each do |cat| %>
        <% if cat.available === "Available" %>
            <div class="col-sm-4">
                <div class="card bg-light mb-3">
                    <img src="<%= cat.image_url %>" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= cat.name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <%= link_to "Show", cat, :class => "btn btn-primary mt-auto" %>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
<h3 class="w-100">
    <span class="badge badge-danger" %>Unavailable Cats</span>
</h3>
<div class="row">
    <% @cats.each do |cat| %>
        <% if cat.available === "Unavailable" %>
            <div class="col-sm-4">
                <div class="card bg-light mb-3">
                    <img src="<%= cat.image_url %>" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= cat.name %></h5>
                        <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                        <%= link_to "Show", cat, :class => "btn btn-primary mt-auto" %>
                    </div>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
